<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/app_name"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="@android:attr/ratingBarStyleSmall"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:scaleX=".5"
                    android:scaleY=".5"
                    android:maxWidth="40dp"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:stepSize=".5"/>

                <TextView
                    android:id="@+id/name_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"
                    android:textSize="15sp"
                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/address_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Address"
                    android:textStyle="italic"
                    android:maxWidth="180dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="9sp"
                    android:autoSizeStepGranularity="8sp"
                    tools:targetApi="o" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded">

                <!--<TextView
                    android:id="@+id/price_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:layout_marginStart="20dp"
                    android:textStyle="italic"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="6sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_gravity="right"
                    tools:targetApi="o" />-->

                <TextView
                    android:id="@+id/distance_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:layout_marginStart="20dp"
                    android:textStyle="italic"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeMaxTextSize="6sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_gravity="right"
                    tools:targetApi="o" />


            </LinearLayout>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>